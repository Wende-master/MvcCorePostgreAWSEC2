@model List<Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Hospitales</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">
        New Departamento
    </a>
</p>
<table class="table table-bordered table-secondary">
    <thead>
        <tr>
            <th>
             Nombre
            </th>
            <th>
              Localidad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localidad)
                </td>
                <td>
                    <a class="btn btn-info" asp-controller="Departamentos" asp-action="Details"
                       asp-route-iddept="@item.IdDept">
                        Detalle
                    </a>   
                    <a class="btn btn-danger" asp-controller="Departamentos" asp-action="Delete"
                       asp-route-iddept="@item.IdDept">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

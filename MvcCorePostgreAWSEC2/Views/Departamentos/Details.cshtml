@model Departamento

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de @Model.Nombre</h1>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdDept)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdDept)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Localidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Localidad)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-outline-secondary" asp-controller="Departamentos" asp-action="Index">Volver</a>
</div>
